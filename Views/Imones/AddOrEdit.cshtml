            </div>
            <div class="form-group">
                <label asp-for="ElPastas" class="control-label"></label>
                <input asp-for="ElPastas" class="form-control" />
                <span asp-validation-for="ElPastas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogasElPastas" class="control-label"></label>
                <input asp-for="BlogasElPastas" class="form-control" />
                <span asp-validation-for="BlogasElPastas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNr" class="control-label"></label>
                <input asp-for="TelNr" class="form-control" />
                <span asp-validation-for="TelNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apskritis" class="control-label"></label>
                <input asp-for="Apskritis" class="form-control" />
                <span asp-validation-for="Apskritis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VMVT" class="control-label"></label>
                <input asp-for="VMVT" class="form-control" />
                <span asp-validation-for="VMVT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KitaInfo" class="control-label"></label>
                <input asp-for="KitaInfo" class="form-control" />
